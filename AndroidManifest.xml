<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.renzo.wikipoff"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="fr.renzo.wikipoff.WikipOff"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.renzo.wikipoff.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.renzo.wikipoff.ArticleActivity"
            android:label="articleactivity" >
        </activity>
                <activity
            android:name="fr.renzo.wikipoff.ManageDatabasesActivity"
            android:label="managedatabasesactivity" >
        </activity>
                
        <activity
            android:name="fr.renzo.wikipoff.SettingsActivity"
            android:label="settingsactivity" >
        </activity>
        <activity android:name="fr.renzo.wikipoff.TabCustomActivity" />
        <activity android:name="fr.renzo.wikipoff.TabInstalledActivity" />
        <activity android:name="fr.renzo.wikipoff.TabAvailableActivity" />
    </application>

</manifest>
